<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activities.CaseInfoActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/color_green_blue">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow_icon"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <com.za.caretogether.widgets.MMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အချက်အလက်‌ပေးပို့မည်"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.za.caretogether.widgets.MMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Case အချက်အလက်များ"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        />

                    <com.za.caretogether.widgets.MMEditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/gray_line_10dp"
                        android:layout_marginTop="10dp"
                        android:hint="Case နံပါတ်"
                        android:textSize="14sp"
                        android:padding="10dp"
                        />

                    <com.za.caretogether.widgets.MMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="နေထိုင်သည့်မြို့နယ်"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/gray_line_10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>

                    </LinearLayout>

                    <com.za.caretogether.widgets.MMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ရန်ကုန်မြို့၊ရန်ကုန်တိုင်းဒေသကြီး"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"/>

                    <com.za.caretogether.widgets.MMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ကျား/မ"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="16dp"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.za.caretogether.widgets.MMRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginRight="10dp"
                            android:text="ကျား"/>

                        <com.za.caretogether.widgets.MMRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="မ"
                            android:textColor="@color/black"/>
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.za.caretogether.widgets.MMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ရောဂါကူးစက်မှုဖြစ်ပွားနေချိန်အတွင်း ခံစားရသော ကျန်းမာရေးအခြေအနေများကို မျှဝေမည်"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        />

                    <com.za.caretogether.widgets.MMEditText
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:background="@drawable/gray_line_10dp"
                        android:layout_marginTop="10dp"
                        android:hint="ဤနေရာတွင်ရေးသားရန်"
                        android:textSize="14sp"
                        android:textAlignment="viewStart"
                        android:padding="10dp"
                        android:gravity="start" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.za.caretogether.widgets.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sender_area"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:gravity="center_horizontal" />

            <com.za.caretogether.widgets.MMButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_send"
                android:layout_margin="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="ပေးပို့မည်"
                android:background="@drawable/round_bg_btn_yellow_10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>